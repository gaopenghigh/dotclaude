{
  "env": {
    "ANTHROPIC_BASE_URL": "http://localhost:4000",
    "ANTHROPIC_AUTH_TOKEN": "dummy",
    "ANTHROPIC_MODEL": "claude-sonnet-4",
    "ANTHROPIC_SMALL_FAST_MODEL": "claude-3.7-sonnet",
    "DISABLE_NON_ESSENTIAL_MODEL_CALLS": "1",
    "DISABLE_TELEMETRY": "1",
    "CLAUDE_CODE_DISABLE_NONESSENTIAL_TRAFFIC": "1"
  },
  "permissions": {
    "additionalDirectories": [
      "/Users/your-username/go/src/your-org/your-project"
    ],
    "allow": [
      "Bash(find:*)",
      "Bash(sed:*)",
      "Bash(./hack/aksbuilder.sh test:*)",
      "Bash(gofmt:*)",
      "Bash(mv:*)",
      "Bash(go test -v)",
      "Bash(go test:*)",
      "Bash(go build ./...)",
      "Bash(go build)",
      "Bash(go build -v ./...)",
      "Bash(mkdir:*)",
      "Bash(go generate)",
      "Bash(go mod tidy)",
      "Bash(rm:*)",
      "Bash(cp:*)",
      "Bash(go build .)",
      "Bash(go tool:*)",
      "Bash(ls:*)",
      "Bash(grep:*)",
      "Bash(go generate ./...)",
      "Bash(go build:*)",
      "Bash(git pull:*)",
      "Bash(git push:*)",
      "Bash(go vet:*)",
      "Bash(go fmt:*)"
    ],
    "deny": []
  }
}
